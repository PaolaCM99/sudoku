<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom|center"
    android:orientation="vertical">

    <ImageView
        android:layout_width="160dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:src="@drawable/sudoku1"
        android:contentDescription="my_image_description" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="casual"
        android:text="Sudokun't"
        android:textAlignment="center"
        android:textColor="#9485F2"
        android:textSize="70sp"
        android:textStyle="bold"
        android:typeface="monospace" />

    <Button
        android:id="@+id/level1Btn"
        android:layout_width="295dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:fontFamily="monospace"
        android:text="Level 1"
        android:textSize="16sp"
        app:icon="@android:drawable/btn_star" />

    <Button
        android:id="@+id/level2Btn"
        android:layout_width="295dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/level1Btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:fontFamily="monospace"
        android:text="Level 2"
        android:textSize="16sp"
        app:icon="@android:drawable/btn_star" />

    <Button
        android:id="@+id/level3Bnt"
        android:layout_width="295dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/level2Btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:fontFamily="monospace"
        android:text="Level 3"
        android:textSize="16sp"
        android:typeface="normal"
        app:icon="@android:drawable/btn_star_big_on" />


    <TextView
        android:id="@+id/version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Version 1.0.0"
        android:textAlignment="center"
        android:textColor="#9485F2"
        android:textSize="15dp"
        android:textStyle="bold" />

</RelativeLayout>


